{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-vv",  // Verbose output
                "-s",   // Disables no-output capturing
                "${workspaceFolder}/aula-15"  // Directory of your tests
